{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir dist",
    "dev": "cross-env NODE_ENV=development && nodemon --exec babel-node ./app/index.js",
    "test": "cross-env NODE_ENV=test && nyc --require @babel/register  mocha ./tests --timeout 20000 --exit",
    "prod": "node ./dist/index.js",
    "build-babel": "npm run clean && babel ./app --out-dir dist",
    "build": "npm run clean && npm run build-babel",
    "start": "export NODE_CONFIG_DIR=./app/config && npm run build && node ./dist/index..herokujs",
    "aws-dev-deploy": "npm run build && claudia create --version dev --region us-east-2 --name podcast-news --api-module dist/index",
    "aws-dev": "npm run build && claudia create --version dev --region us-east-2 --handler lambda.handler --deploy-proxy-api --name podcast-news --profile default",
    "claudia-generate": "claudia generate-serverless-express-proxy --express-module dist/index",
    "aws-dev-update": "npm run build && claudia update"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.12.1",
    "aws-serverless-express": "^3.3.8",
    "body-parser": "^1.19.0",
    "claudia-api-builder": "^4.1.2",
    "config": "^3.3.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.11",
    "scrape-it": "^5.2.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/register": "^7.12.1",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "claudia": "^5.12.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0"
  }
}
